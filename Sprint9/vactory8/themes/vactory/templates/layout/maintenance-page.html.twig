{#
/**
 * @file
 * Theme override to display a single Drupal page while offline.
 *
 * All available variables are mirrored in page.html.twig.
 * Some may be blank but they are provided for consistency.
 *
 * @see template_preprocess_maintenance_page()
 */
#}

<main role="main" class="maintenance-page text-align-center">
  <div class="container">

    {% if title %}
      <h1 class="maintenance-page__title paragraph__title text-uppercase">{{ title }}</h1>
    {% endif %}

    <div class="maintenance-page__message">
      {{ page.highlighted }}
      {{ page.content }}
    </div>

  </div>
</main>
