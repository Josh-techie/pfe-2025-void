{#
/**
 * @file
 * Article Component.
 * themes/interface/src/scss/stylesheets/components/article/_article.scss
 */
#}
{% if classes is not defined %}
  {% set classes = [] %}
{% endif %}
{% set classes = classes|merge(['card','card--inline', 'mb-4']) %}

<article {{ attributes.addClass(classes) }}>
  <div class="card__image">
    {% if image.0 is defined %}
      {{ image }}
    {% else %}
      <img class="img-fluid lazyloaded" src="{{ base_path ~ directory }}/assets/img/smart-search-default.png" typeof="foaf:Image" alt="browsers" title="{{ 'Default content image'|t }}">
    {% endif %}
    {% block image_after %}{% endblock %}
  </div>
  <div class="card__body">
    {{ contextual_links }}

    {% if subtitle or date_string %}
      <div class="card__meta">
        {% block date_string %}
          {% if date_string %}
            <span class="card__date text-gray">{{ date_string|capitalize }}</span>
          {% endif %}
        {% endblock %}
        {% block subtitle %}
          {% if subtitle %}
            <span class="card__tag badge badge-primary ml-2">{{ subtitle }}</span>
          {% endif %}
        {% endblock %}
      </div>
    {% endif %}

    {{ title_prefix }}
    <h3{{ title_attributes }} class="card__title">
      {% if  url is null %}
        <span>{{ title }}</span>
      {% else %}
        <a href="{{ url }}" rel="bookmark">{{ title }}</a>
      {% endif %}
    </h3>
    {{ title_suffix }}
    <div class="card__description">
      {% if intro %}
        <p>{{ noWrapper(intro) }}</p>
      {% else %}
        <p>{{ summary }}</p>
      {% endif %}
    </div>
    {% block intro_after %}{% endblock %}
  </div>
</article>
